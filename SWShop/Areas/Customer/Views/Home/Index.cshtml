                </div>
                <div class="col-lg-8 col-md-8">
                    <ul class="filter__controls">
                        <li class="active" data-filter="*">All</li>
                        @foreach (var category in Model.CategoryList)
                        {
                            <li data-filter=".@category.Text">@category.Text</li>
                        }
