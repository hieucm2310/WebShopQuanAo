@model List<Product>

<div class="card shadow border-0 my-4">
    <div class="card-header bg-info bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Danh sách sản phẩm</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-6">
            </div>
            <div class="col-6 text-right">
                <a asp-controller="Product" asp-action="Upsert" class="btn btn-success create-new-button">
                    <i class="bi bi-plus-circle"></i> Thêm sản phẩm mới
                </a>
            </div>
        </div>
        <table id="tblData" class="table table-secondary" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Tên sản phẩm
                    </th>
                    <th>
                        Brand
                    </th>
                    <th>
                        Giá
                    </th>
                    <th>
                        Đã bán
                    </th>
                    <th>
                        Hiện còn
                    </th>
                    <th>
                        Loại
                    </th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@section Scripts{
    <script src="~/js/product.js"></script>
    <script>

        // Set a timeout to add the "text-light" class after 1 second
        setTimeout(() => {
            var elements = document.querySelectorAll('[aria-controls="tblData"]');
            for (let i = 0; i < elements.length; i++) {
                elements[i].classList.add('text-light'); // Add the "text-light" class to the element
            }
        }, 10);
    </script>
}