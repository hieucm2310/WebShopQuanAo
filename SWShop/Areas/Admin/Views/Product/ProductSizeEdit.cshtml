@model Size

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-info bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Sửa cỡ</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post">
            <input asp-for="ProductId" hidden />
            <div class="border p-3 mt-4">
                <div asp-validation-summary="ModelOnly"></div>
                <div class="form-floating py-2 col-12">
                    <label asp-for=Name class="ms-2"></label>
                    <input asp-for="Name" class="form-control border-0 shadow" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <label asp-for=Amount class="ms-2"></label>
                    <input asp-for="Amount" class="form-control border-0 shadow" />
                    <span asp-validation-for="Amount" class="text-danger"></span>
                </div>
                <div class="row mt-3">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">Cập nhật</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a onclick="history.back()" class="btn btn-outline-secondary form-control">
                            Trở về
                        </a>
                    </div>
                </div>

            </div>
        </form>
    </div>
</div>


@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}