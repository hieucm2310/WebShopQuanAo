@model Category

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-info bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Delete Category</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post">
            <input asp-for="Id" hidden />
            <div class="border p-3 mt-4">
                <div class="form-floating py-2 col-12">
                    <label asp-for=Name class="ms-2"></label>
                    <input asp-for="Name" disabled class="form-control border-0 shadow" />
                </div>
                <div class="form-floating py-2 col-12">
                    <label asp-for=DisplayOrder class="ms-2"></label>
                    <input asp-for="DisplayOrder" disabled class="form-control border-0 shadow" />
                </div>
                <div class="row mt-3">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-danger form-control">Xóa</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary form-control">
                            Trở lại danh sách
                        </a>
                    </div>
                </div>

            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        setTimeout(() => {
            debugger;
            $('input').each(function () {
                if ($(this).prop('disabled')) {
                    $(this).css('background-color', 'black');
                }
            });
        }, 500);
    </script>
}