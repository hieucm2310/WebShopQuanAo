<link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css">
<script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>

<div class="card shadow border-0 my-4">
    <div class="card-header bg-info bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Danh sách user</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">

        <table id="tblData" class="table table-secondary" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Tên
                    </th>
                    <th>
                        Email
                    </th>
                    <th>
                        Điện thoại
                    </th>
                    <th>
                        Vai trò
                    </th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@section Scripts{
    <script src="~/js/user.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
    <script>

        // Set a timeout to add the "text-light" class after 1 second
        setTimeout(() => {
            var elements = document.querySelectorAll('[aria-controls="tblData"]');
            for (let i = 0; i < elements.length; i++) {
                elements[i].classList.add('text-light'); // Add the "text-light" class to the element
            }
        }, 500);
    </script>
}