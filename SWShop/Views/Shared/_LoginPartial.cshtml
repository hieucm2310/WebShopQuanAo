@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <a id="manage" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @(UserManager.GetUserName(User).Length>17?UserManager.GetUserName(User).Substring(0,18):UserManager.GetUserName(User))!</a>
    <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
        <button id="logout" type="submit" class="text-dark nav-link btn btn-link border-0" style="font-size:10px">Đăng xuất</button>
    </form>
}
else
{
    <a id="register" asp-area="Identity" asp-page="/Account/Register">Đăng ký</a>
    <a id="login" asp-area="Identity" asp-page="/Account/Login">Đăng nhập</a>
}
